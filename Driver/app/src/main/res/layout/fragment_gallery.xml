<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Pickup Location"
    android:layout_marginBottom="20sp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20sp"
    android:textColor="#000000"
    android:id="@+id/pAddress"
    />
    <TextView
        android:id="@+id/pCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Pickup Location"
        android:layout_marginBottom="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:textColor="#000000"
        android:layout_below="@+id/pAddress"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Drop Location"
        android:layout_below="@+id/pCity"
        android:layout_marginBottom="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:textColor="#000000"
        android:id="@+id/dAddress"
        />
    <TextView
        android:id="@+id/dCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Drop Location"
        android:layout_marginBottom="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:textColor="#000000"
        android:layout_below="@+id/dAddress"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dCity"
        android:layout_centerHorizontal="true"
        android:padding="20sp"
        android:id="@+id/pBt"
        android:text="Reach To Pricup Location"
        android:enabled="false"
        android:layout_marginTop="20sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pBt"
        android:layout_centerHorizontal="true"
        android:padding="20sp"
        android:text="Reach To Drop Location"
        android:id="@+id/dBt"
        android:enabled="false"
        android:layout_marginTop="20sp"/>
    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dBt"
        android:layout_marginTop="20sp"
        android:hint="Enter OTP"
        android:id="@+id/eOtp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eOtp"
        android:layout_centerHorizontal="true"
        android:padding="20sp"
        android:enabled="true"
        android:text="Complete Ride"
        android:id="@+id/completeButton"
        android:layout_marginTop="20sp"/>
</RelativeLayout>