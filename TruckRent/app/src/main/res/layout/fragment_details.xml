<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".client.ui.DetailsFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10sp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BJdkhnnfddddddddddddddddddddddddddkdjfkdkkkkkkkkkkkkkkkkkkkkkkddk"
            android:id="@+id/txtFrom"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:padding="10sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BJdkhnnfddddddddddddddddddddddddddkdjfkdkkkkkkkkkkkkkkkkkkkkkkddk"
            android:id="@+id/txtTo"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:padding="10sp"
            android:textColor="@color/black"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/txtFrom"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/txtTo"
            android:text="Distance: 32144"
            android:textColor="@color/black"
            android:padding="10sp"
            android:layout_marginTop="10sp"
            android:id="@+id/txtDist"
            />

        <TextView
            android:id="@+id/txtFare"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/txtDist"

            android:padding="10sp"
            android:text="Total: 32144"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtFare"
            android:text="Status"
            android:textColor="@color/black"
            android:layout_marginTop="100sp"
            android:textSize="40sp"
            android:id="@+id/txtStatus"/>
    </RelativeLayout>

</ScrollView>