<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".client.ui.home.HomeFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selectLocation"
        android:text="Select Pick-up"
        android:layout_margin="10sp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/map_snap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectLocation"
        android:visibility="gone"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_below="@+id/map_snap"
        android:id="@+id/city"
        android:padding="16dp"
        android:backgroundTint="#cfd8dc"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:text="Your City"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />
    <TextView
        android:maxLines="4"
        android:layout_weight="1"
        android:id="@+id/location"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:text="Your location"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:minHeight="50dp"
        android:layout_below="@+id/city"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/pb_address"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selectDropLocation"
        android:text="Select Pick-up"
        android:layout_margin="10sp"
        android:layout_below="@+id/pb_address"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/map_snap1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectDropLocation"
        android:visibility="gone"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_below="@+id/map_snap1"
        android:id="@+id/city1"
        android:padding="16dp"
        android:backgroundTint="#cfd8dc"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:text="Your City"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />
    <TextView
        android:maxLines="4"
        android:layout_weight="1"
        android:id="@+id/location1"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:text="Your location"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:minHeight="50dp"
        android:layout_below="@+id/city1"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/pb_address1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/location1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendData"
        android:layout_centerHorizontal="true"
        android:text="Request Truck"
        android:layout_below="@id/pb_address1"/>
</RelativeLayout>
</ScrollView>